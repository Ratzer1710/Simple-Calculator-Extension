{
    "manifest_version": 3,
    "name": "Simple Calculator",
    "description": "A calculator extension with the basic functions (+, -, *, /)",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Simple Calculator",
        "default_icon": "icon.png"
    },
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
}
